<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-plus"> </i> Add Testimonials</h1>
            <% include ./partials/messages %>
            <form action="/stories/add" method="POST">
                <div class="form-group">
                    <label for="fullname">Full Name</label>
                    <input type="text" id="fullname" name="fullname" class="form-control" placeholder="Enter Name" />
                </div>
                <div class="form-group">
                    <label for="story_description">What he/she has to say ?</label>
                    <textarea id="story_description" name="story_description" class="form-control"
                        placeholder="Enter Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" id="location" name="location" class="form-control"
                        placeholder="Enter Location" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Add Stories</button>
            </form>
            <p class="lead mt-4">
                <a href="/stories/view">View Stories Details</a>
                <br>
                <a href="/packages/add">Add Packages</a>
                <br>
                <a href="/dashboard">Go to Dashboard</a>
            </p>
        </div>
    </div>
</div>