<link rel="stylesheet" href="https://bootswatch.com/4/journal/bootstrap.min.css" />
<img src="../assets/images/admin_panel.png" alt="admin_panel_icon" width="100" height="100" />
<div style="float: right">
    <p class="lead mb-3 mt-2" style="float: right">Welcome <%= user.name %></p>
    <p><a href="/users/logout" class="btn btn-primary">Logout</a></p>
</div>
<h1 class="mt-4">Admin Panel</h1>
<!-- add packagse button  -->
<p>
    <p>
        <i class="fas fa-plus"> </i>
    </p>
    <a href="/packages/add" class="text-lead">addPackages</a>
</p>
<!-- end of add packages  -->

<!-- start of add stories button -->
<p>
    <p>
        <i class="fas fa-plus"> </i>
    </p>
    <a href="/stories/add" class="text-lead">addStories</a>
</p>
<!-- end of add storie button -->
<!-- view all boookings -->
<p>
    <p>
        <i class="fas fa-plus"> </i>
    </p>
    <a href="/dashboard" class="text-lead">Booking Records</a>
</p>
<!-- end of view all bookings -->

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Fullname</th>
            <th scope="col">Email</th>
            <th scope="col">Contact No.</th>
            <th scope="col">Enquiry About</th>
        </tr>
    </thead>
    <tbody>

        <% booking_info.forEach(function(booking) { %>

        <tr class="table-active">
            <th scope="row"><%= booking.name%></th>
            <td><%= booking.email %></td>
            <td><%= booking.ph_no %></td>
            <td><%= booking.info %></td>
        </tr>

        <% } )%>


    </tbody>
</table>