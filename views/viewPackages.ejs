<link rel="stylesheet" href="../assets/css/style.css">
<%# package.description %>
<%# package.transportation_details %>
<%# package.extra_price_details %>
<section class="section-tours">
    <div class="row">
        <% Packages.forEach(function(package) { %>
        <div class="col-1-of-3" style="margin-bottom: 2em;">
            <div class="card">
                <div class="card__side card__side--front">
                    <div class="card__picture card__picture--1">
                        <img src="../assets/images/scenary.png" alt="travel_image" style="opacity: .5;">

                    </div>
                    <h4 class="card__heading">
                        <span class="card__heading-span card__heading-span--1">
                            <%=package.title%>
                        </span>
                    </h4>
                    <div class="card__details">
                        <ul>
                            <li><span style="font-weight: 900;font-style: oblique;"
                                    class="navigation__link"><%=package.ps_detail%></span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card__side card__side--back card__side--back-1">
                    <div class="card__cta">
                        <div class="card__price-box">
                            <p class="card__price-only">Only</p>
                            <p class="card__price-value">Rs.<%=package.total_price%>
                            </p>
                        </div>
                        <a href="#<%= package._id %>" class="btn btn--white">Book Now</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="popup" id="<%= package._id %>">
            <div class="popup__content">
                <div class="popup__left">
                    <img src="../assets/images/scenary.png" alt="Tour" class="popup__img" />
                    <img src="../assets/images/scenary.png" alt="Tour" class="popup__img" />
                </div>
                <div class="popup__right">
                    <a href="#section-tours" class="popup__close">&times;</a>
                    <h2 class="heading-secondary u-margin-bottom-small">
                        Start booking now
                    </h2>
                    <h3 class="heading-tertiary u-margin-bottom-small">
                        Important &ndash; Please read the details before booking
                    </h3>
                    <p class="popup__text">
                        <%= package.description %>
                        <br>
                        <%= package.transportation_details %>
                        <br>
                        <%= package.extra_price_details %>
                    </p>
                    <a href="#" class="btn btn--green">Book Now</a>
                </div>
            </div>
        </div>
        <% } )%>
    </div>
</section>